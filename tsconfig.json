{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@modelcontextprotocol/sdk": ["node_modules/@modelcontextprotocol/sdk/dist/esm"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
